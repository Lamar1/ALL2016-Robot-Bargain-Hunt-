from tkinter import *
import time
def count_down(duration):
    for t in range(duration, -1, -1):
        # format as 2 digit integers, fills with zero to the left
        # divmod() gives minutes, seconds
        sf = "{:02d}:{:02d}".format(*divmod(t, 60))
        #print(sf)  # test
        time_str.set(sf)
        root.update()
        # delay one second
        time.sleep(1)
        
root = Tk()
time_str = StringVar()
Label(root, textvariable=time_str, font=('helvetica',40), bg='white',
      fg='blue', relief='raised', bd=3).pack(fill='x', padx=5, pady=5)

frame = Frame(root,borderwidth=10,relief=GROOVE)

            
labelA = Label(root, text="Choose Duration")
labelA.pack()
button1 = Button(frame, text='1 minute', command= lambda a=60: count_down(a))
button2 = Button(frame, text='2 minutes', command= lambda b=120: count_down(b))
button3 = Button(frame, text='4 minutes', command= lambda c=240: count_down(c))
button1.pack(side=LEFT,fill=BOTH,expand=True)
button2.pack(side=LEFT,fill=BOTH,expand=True)
button3.pack(side=LEFT,fill=BOTH,expand=True)

frame.pack(fill=BOTH,expand=True)

root.mainloop()

