from tkinter import *
import time
def count_down(duration):
    for t in range(duration, -1, -1):
        # format as 2 digit integers, fills with zero to the left
        # divmod() gives minutes, seconds
        sf = "{:02d}:{:02d}".format(*divmod(t, 60))
        #print(sf)  # test
        time_str.set(sf)
        root1.update()
        # delay one second
        time.sleep(1)
class Gui:
    def __init__(self,root):
            self.root = root
            # create start and stop buttons
            # pack() positions the buttons below the label
            self.button1 = Button(self.root, text='2 minutes', command=lambda a = 120: count_down(a))
            self.button1.pack(side=LEFT,fill=BOTH,expand=True)                


def main():
        global root1
        root1 = Tk()
        gui = Gui(root1)
        global time_str
        time_str = StringVar()
        labelTimer =Label(root1, textvariable=time_str, font=('helvetica',40), bg='white',
                           fg='blue', relief='raised', bd=3)
        labelTimer.pack(fill='x', padx=5, pady=5)
        # start the GUI event loop
        root1.mainloop()

if __name__ == '__main__':
        sys.exit(main())
